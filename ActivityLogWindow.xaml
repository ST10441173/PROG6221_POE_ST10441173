        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activity Log" Height="350" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <TextBlock Text="Recent Activity Log" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
