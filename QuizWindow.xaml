<Window x:Class="Prog6221_POE.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Quiz" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="QuestionText" FontSize="16" TextWrapping="Wrap" Margin="0,0,0,10"/>

        <StackPanel x:Name="OptionsPanel" Grid.Row="1" />

        <Button x:Name="NextButton" Grid.Row="2" Content="Next" Height="30" Width="100" HorizontalAlignment="Right" Click="NextButton_Click"/>
    </Grid>
</Window>
